{
   "background": {
      "scripts": [ "js/background.js" ]
   },
   "manifest_version": 2,
   "name": "GitHub Pull Request Reviewers",
   "description": "This extension adds reviewer info to pr list.",
   "options_page": "html/option.html",
   "content_scripts": [
      {
         "matches": [ "https://github.com/*" ],
         "css": [ "css/base.css" ]
      }
   ],
   "permissions": [ "https://github.com/*", "https://api.github.com/*", "tabs", "storage" ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "0.0.6"
}
